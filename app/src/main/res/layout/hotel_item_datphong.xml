<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="10dp" android:layout_margin="5dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/img_room" android:layout_width="100dp" android:layout_height="180dp" android:scaleType="center" android:src="@drawable/hotel_5"> </ImageView>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:orientation="vertical" android:background="@color/white">
            <TextView android:id="@+id/tv_nameRoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Phòng đôi DELUXY" android:textSize="18dp" android:textColor="@color/black" android:textStyle="bold"> </TextView>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="5dp">
                <ImageView android:id="@+id/icon_bed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bed3"> </ImageView>
                <TextView android:id="@+id/tv_songuoi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="13sp" android:layout_gravity="center" android:layout_marginLeft="10dp" android:text="3 người"> </TextView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/icon_wifi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wifi1"> </ImageView>
                <TextView android:id="@+id/tv_wifi" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="13sp" android:layout_gravity="center" android:layout_marginLeft="10dp" android:text="Wifi"> </TextView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/icon_air" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/air_conditioner1"> </ImageView>
                <TextView android:id="@+id/tv_air" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="13sp" android:layout_gravity="center" android:layout_marginLeft="10dp" android:text="Máy lạnh"> </TextView>
            </LinearLayout>
            <TextView android:id="@+id/tv_priceRoom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:gravity="end" android:text="1.102.524 VND" android:textColor="#FF0000" android:textSize="15sp" android:textStyle="bold"> </TextView>
            <Button android:layout_width="100dp" android:layout_height="wrap_content" android:text="Đặt" android:backgroundTint="#F96D0E" android:layout_gravity="end" android:textColor="@color/white" android:layout_marginRight="10dp" android:layout_marginTop="3dp"> </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>