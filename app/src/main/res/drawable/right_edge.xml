<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CAC7C7" /> <!-- Background color -->
        </shape>
    </item>

    <!-- Right border -->
    <item android:right="2dp"> <!-- Set the right border -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Right border color -->
            <size android:width="2dp" /> <!-- Border thickness -->
        </shape>
    </item>
</layer-list>
