<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B6B0B0" /> <!-- Màu nền -->
        </shape>
    </item>

    <!-- Viền dưới -->
    <item android:bottom="2dp"> <!-- Đặt viền dưới -->
        <shape android:shape="rectangle">
            <solid android:color="#F8FAF7" /> <!-- Màu viền dưới -->
            <size android:height="2dp" /> <!-- Độ dày viền dưới -->
        </shape>
    </item>
</layer-list>